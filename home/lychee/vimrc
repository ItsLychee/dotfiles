" Options
set number
set guicursor=""
set nocompatible
set termguicolors
set nowrap
set tabstop=4
set smartindent
set undofile

syntax on
filetype plugin indent on
let g:airline_theme='ayu_mirage'

colorscheme sonokai

" Lua stuff

lua <<EOF
	require 'nvim-tree'.setup({
	 disable_netrw = true,
	 open_on_tab = true,
	 auto_reload_on_write = true,
	 open_on_setup = true,
	 open_on_setup_file = true,
	 update_cwd = true,
	 filters = {
	   dotfiles = true,
	   exclude = { ".", ".."},
	 },
     view = {
		 adaptive_size = true,
	 },
	 renderer = {
	   indent_markers = {
		 enable = true,
	   },
	   icons = {
		 show = {
		   file = false,
		   folder = false,
		   folder_arrow = false,
		   git = false,
		 },
	   },
	 },
	})
    require 'colorizer'.setup()
EOF

