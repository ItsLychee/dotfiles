# vim:ft=dosini

[bar/main]
wm-restack = bspwm
override-redirect = false
height = 18
margin-bottom = 5

background = #242430

font-0 = "Misc Termsyn:pixelsize=8;2"
font-1 = "Font Awesome 5 Free"
font-2 = "Twemoji:scale=10;1"
font-3 = "Noto Sans:size=10;1"

modules-left = bspwm
modules-center = title
modules-right = time


[module/time]
type = internal/date
date = %d.%m.%Y
time = %I:%M%p %Z (%z)
label = %date%  %time%
format = <label>
format-font = 1

[module/bspwm]
type = internal/bspwm
format-font = 2
label-focused-foreground = #9191ba

[module/title]
type = internal/xwindow
format = <label>
format-font = 2
