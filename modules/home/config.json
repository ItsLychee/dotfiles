{
    "layer": "top",
    "reload_style_on_change": true,
    "modules-left": [
        "sway/workspaces",
    ],
    "modules-center": [
        "sway/window"
    ],
    "modules-right": [
        "wireplumber",
        "backlight",
        "battery",
        "clock",
    ],

    "clock": {
        "format": " {:%Y.%m.%d %I:%M%p}",
    },
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["", ""]
    },
    "wireplumber": {
        "format": "{volume}% {icon}",
        "format-muted": "{volume}% ",
        "on-click": "helvum",
        "format-icons": ["", "", ""]
    }
}
