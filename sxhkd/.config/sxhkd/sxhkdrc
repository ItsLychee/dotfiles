
# WM Related
super + Escape
	pkill -USR1 -x sxhkd

super + alt + {q,r}
	bspc {quit,wm -r}

# Nodes 

# Replace positions of two nodes
super + shift + {w,a,s,d}
	bspc node focused -s {north,west,south,east}
# Focus on another node
super + {w,a,s,d}
	bspc node focused -f {north,west,south,east}
# Close node
super + c
	bspc node focused -c
# Toggle floating state of a node
super + f
	bspc node focused -t ~floating
# Send node to another desktop
super + shift + {1-5}
	bspc node focused -d {1-5} --follow
# Desktop switcher
super + {z,x}
	bspc desktop {prev,next} -f


# Application-related
super + space
	rofi -show drun

super + Tab 
	rofi -show window

Print
	flameshot gui

# Audio management
XF86Audio{Lower,Raise}Volume
  pactl set-sink-volume @DEFAULT_SINK@ {-,+}5% 

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle


XF86Audio{Play,Prev,Next}
	playerctl --player=spotify,mpd,%any {play\-pause,previous,next}

